<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="Sr No"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Dr. Id"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Speciality"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Dr Name"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Mon. Business"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Is Confirm"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvSrno"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_main"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvDrId"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_main"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvSpeciality"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_main"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvDrName"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_main"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvMonBusiness"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_main"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvConfirm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_main"
                android:textSize="14sp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_delete_selector" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/text_sub" />
</LinearLayout>