<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_product"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawableBottom="@drawable/edt_bottom_drawable"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:inputType="text"
                android:hint="Product"
                android:textSize="@dimen/font_small"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/text_main" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_unit"
                android:drawableBottom="@drawable/edt_bottom_drawable"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Unit"
                android:drawableEnd="@drawable/ic_dropdown"
                android:focusable="false"
                android:textSize="@dimen/font_small"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:textColor="@color/text_main" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_sample_new"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawableBottom="@drawable/edt_bottom_drawable"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:hint="Select Type Of Sample"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="@dimen/font_small"
                android:singleLine="true"
                android:text="R"
                android:textColor="@color/text_main" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>