<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:orientation="vertical"
              android:focusableInTouchMode="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/llTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:baselineAligned="false">

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="Sr No"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="Dr. Id"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:text="Dr Name"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:text="Work With"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:text="Mon. Business"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="Last Visited"
                android:textColor="@color/white"/>

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="Category"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                android:visibility="gone"
                    android:text="Focus New"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                android:visibility="gone"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                android:visibility="gone"
                    android:text="Focus Enhance"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                android:visibility="gone"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Added Date"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="Is Confirm"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Is Approved"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            <com.unisonpharmaceuticals.views.SemiBoldTextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Approved By"
                    android:textColor="@color/white"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvSrno"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvDrId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvDrName"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvWorkWith"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:minLines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvMonBusiness"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvLastVisited"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_main"/>

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvCategory"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                android:id="@+id/tvFocusNew"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                android:visibility="gone"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvFocusEnhance"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                android:visibility="gone"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                android:visibility="gone"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvAddedDate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvIsApproved"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:id="@+id/tvIsApprovedBy"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/text_main"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>

            <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_delete_selector"
                    android:layout_gravity="center"/>

            <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_sub"/>
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/text_sub"/>
</LinearLayout>