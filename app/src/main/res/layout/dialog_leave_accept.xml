<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:gravity="center"
              android:orientation="vertical"
              android:focusable="false"
              android:focusableInTouchMode="true">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/round_corner_left_right">

        <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Select Reason"
                android:textColor="@color/light_primary"
                android:textSize="18sp"/>

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:src="@drawable/ic_close_light_primary"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center|start"/>

        <com.unisonpharmaceuticals.views.SemiBoldTextView
                android:visibility="gone"
                android:id="@+id/tvDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center|end"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="16sp"/>

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
        <LinearLayout
                android:id="@+id/llApprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="22dp">
            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/ic_approve_leave"/>
            <com.unisonpharmaceuticals.views.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approve Request"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_light_gray"/>
        <LinearLayout
                android:id="@+id/llReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="22dp">
            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reject_leave"/>
            <com.unisonpharmaceuticals.views.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject Request"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"/>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_light_gray"/>

        <LinearLayout
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="center"
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

            <com.unisonpharmaceuticals.views.RegularTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="CANCEL"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:visibility="visible"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>