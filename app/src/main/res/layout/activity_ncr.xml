<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.NCRActivity">

    <include layout="@layout/toolbar"/>

    <include layout="@layout/layout_loading"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="3dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <com.unisonpharmaceuticals.views.SemiBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor Details"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputDoctorName"
                                android:layout_width="match_parent"
                                android:layout_marginTop="8dp"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtDoctor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Doctor Name*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputQualification"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtQualification"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Qualification*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputSpeciality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtSpeciality"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Speciality*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputDrType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtDrType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Doctor Type*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="3dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <com.unisonpharmaceuticals.views.SemiBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address Details"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputAddress1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtAddress1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minLines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:hint="Address 1*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputAddress2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtAddress2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minLines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:hint="Address 2*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputAddress3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtAddress3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minLines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:hint="Address 3"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>


                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputAddress4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtAddress4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minLines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:hint="Address 4"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>


                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                            android:id="@+id/inputArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                android:id="@+id/edtArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:hint="Area*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputDistrict"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtDistrict"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="District*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="City*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>


                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputPinCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtPinCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="6"
                                    android:hint="PinCode*"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="3dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <com.unisonpharmaceuticals.views.SemiBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visit At"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                        <com.unisonpharmaceuticals.views.CustomTextInputLayout
                                android:id="@+id/inputVisit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:theme="@style/TextLabelForm">

                            <com.unisonpharmaceuticals.views.RegularEditText
                                    android:id="@+id/edtVisit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Visit At"/>
                        </com.unisonpharmaceuticals.views.CustomTextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="3dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <com.unisonpharmaceuticals.views.SemiBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select MR"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvDepartment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <com.unisonpharmaceuticals.views.BoldTextView
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/colorPrimaryDark"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="Submit"
                        android:textColor="@color/white"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/layout_loading_transparent"/>
    </FrameLayout>
</LinearLayout>