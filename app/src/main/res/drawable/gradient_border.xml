<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                    android:angle="90"
                    android:centerColor="@color/bg_main_dark"
                    android:endColor="@color/text_dark_gray"
                    android:gradientRadius="360"
                    android:startColor="@color/text_dark_gray"
                    android:type="linear" />
        </shape>
    </item>
    <item
            android:bottom="0.5dp"
            android:left="0.5dp"
            android:right="0.5dp"
            android:top="0.5dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>