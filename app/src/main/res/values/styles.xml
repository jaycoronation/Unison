<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout"> <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/light_primary</item>
        <item name="android:textSize">14sp</item> <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/light_primary</item>
    </style>

    <style name="TextLabelTablet" parent="Widget.Design.TextInputLayout"> <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/light_primary</item>
        <item name="android:textSize">20sp</item> <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/light_primary</item>
    </style>

    <style name="TextLabelForm" parent="Widget.Design.TextInputLayout"> <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_sub</item>
        <item name="android:textSize">14sp</item> <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/text_main</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/text_light_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextLabelFormTablet" parent="Widget.Design.TextInputLayout"> <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_sub</item>
        <item name="android:textSize">20sp</item> <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/text_main</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/text_light_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextLabelROW" parent="Widget.Design.TextInputLayout"> <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_sub</item>
        <item name="android:textSize">12sp</item> <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/text_main</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/text_light_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>



    <style name="Animations" />
    <style name="Animations.SmileWindow">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="PBConsultant" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_green</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="PBImportant" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_red</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="PBPotential" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_yellow</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="PBGP" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_primary</item>
        <item name="android:minWidth">200dp</item>
    </style>


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_corner_left_right</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BottomSheetLogout" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_corner_left_right</item>
    </style>

    <style name="BaseBottomSheetDialogLogout" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="bottomSheetStyle">@style/BottomSheetLogout</item>
    </style>

    <style name="BottomSheetDialogThemeLogout" parent="BaseBottomSheetDialogLogout" />


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <!--For Loader-->
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>


    <!--For Roboto Calendar-->
    <style name="RobotoCalendarMonthText">
        <item name="android:textSize">@dimen/roboto_calendar_month_font</item>
        <item name="android:textColor">@color/roboto_calendar_month_font</item>
    </style>

    <style name="RobotoCalendarMonthArrow">
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:textSize">@dimen/roboto_calendar_day_of_week_font</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:textSize">@dimen/roboto_calendar_day_of_the_month_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_month_font</item>
    </style>

    <style name="MaterialDialogSheetTemp" parent="Theme.AppCompat.Light.Dialog">

        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <!--<item name="android:windowIsFloating">false</item>-->
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    //Calendar
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


</resources>
